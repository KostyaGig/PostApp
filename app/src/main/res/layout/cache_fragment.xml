<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zinoview.fragmenttagapp.presentation.customview.PostTextView
        android:id="@+id/post_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        tools:text="Info about clicked post"
        android:textColor="@color/design_default_color_primary"
        />


    <Button
        android:id="@+id/post_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:text="Read"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/post_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:text="Write"
        />

    <com.zinoview.fragmenttagapp.presentation.customview.PostButton
        android:id="@+id/delete_cached_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:text="Delete from cache"
        android:backgroundTint="@android:color/holo_red_dark"
        style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
        android:textColor="@android:color/white"
        android:visibility="gone"
        />

</LinearLayout>